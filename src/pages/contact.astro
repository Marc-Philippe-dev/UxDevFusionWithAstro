---
import { Accordion } from "@/components/Accordion";
import CtaCard from "@/components/CtaCard.astro";
import SectionIntroducer from "@/components/SectionIntroducer.astro";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import Layout from "@/layouts/Layout.astro";
import { ChevronRight, Mail, PhoneCall } from "lucide-react";

const faqData = [
  {
    title: "Comment obtenir un devis ?",
    description:
      "Vous pouvez nous contacter via notre site web ou nous envoyer un e-mail avec les détails de votre projet. Nous vous fournirons une estimation sur mesure.",
  },
  {
    title: "Quels sont vos délais de livraison?",
    description:
      " Lorem ipsum dolor, sit amet consectetur adipisicing elit. Deleniti aperiam ex animi quis dolor cumque aut culpa porro vel cum.",
  },
  {
    title: "Proposez-vous un accompagnement après le lancement ?",
    description:
      "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Deleniti aperiam ex animi quis dolor cumque aut culpa porro vel cum. ",
  },
  {
    title: "Pourquoi choisir Fusion ?",
    description:
      "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Deleniti aperiam ex animi quis dolor cumque aut culpa porro vel cum. ",
  },
];
---

<Layout>
  <!-- Hero -->

  <section>
    <div class="container flex flex-col items-center gap-5">
      <h1 class="text-center max-w-md">Entretenons nous sur vos projets...</h1>
      <p class="max-w-md text-center">
        Parlez nous de vos projets pour que nous puissons éléborer un plan
        d’action solide afin de répondre à vos besoins efficacement
      </p>
    </div>
  </section>

  <!-- Contact Information & Form Section -->
  <section class="container grid xl:grid-cols-2">
    <!-- Contact -->
    <div class="bg-gray-50/10 p-4 md:p-10 flex flex-col gap-5 items-center">
      <h2 class="text-primary-400">Contactez-nous</h2>
      <p>Contactez-nous, et laissez-nous vous accompgner</p>

      <div
        class="mt-6 grid lg:grid-cols-2 gap-4 items-center justify-items-center flex-grow w-full"
      >
        <div
          class="bg-[#1F1609] p-4 rounded-lg flex flex-col gap-3 flex-grow w-full"
        >
          <Mail className="text-primary" />
          <h3>E-mail</h3>
          <p class="text-foreground/50">uxdevfusion@gmail.com</p>
          <div class="flex justify-between items-center">
            <span class="text-primary-400 font-semibold">Ecrire</span>
            <span>
              <ChevronRight
                className="text-primary-400 size-10 bg-primary/10 p-2 rounded-full"
              />
            </span>
          </div>
        </div>
        <div
          class="bg-[#1F1609] p-4 rounded-lg flex flex-col gap-3 flex-grow w-full"
        >
          <PhoneCall className="text-primary" />
          <h3>Téléphone</h3>
          <p class="text-foreground/50">(+229) 01 91 08 16 85</p>
          <div class="flex justify-between items-center">
            <span class="text-primary-400 font-semibold">Appeler</span>
            <span>
              <ChevronRight
                className="text-primary-400 size-10 bg-primary/10 p-2 rounded-full"
              />
            </span>
          </div>
        </div>
        <div
          class="bg-[#1F1609] p-4 rounded-lg flex flex-col gap-3 flex-grow w-full"
        >
          <i class="fa-brands fa-whatsapp text-primary text-3xl border-0 p-0"
          ></i>

          <h3>Téléphone</h3>
          <p class="text-foreground/50">(+229) 01 91 08 16 85</p>
          <div class="flex justify-between items-center">
            <span class="text-primary-400 font-semibold">Ecrire</span>
            <span>
              <ChevronRight
                className="text-primary-400 size-10 bg-primary/10 p-2 rounded-full"
              />
            </span>
          </div>
        </div>
        <div
          class="bg-[#1F1609] p-4 rounded-lg flex flex-col gap-3 flex-grow w-full h-full"
        >
          <span class="flex gap-4">
            <i class="fa-brands fa-linkedin text-primary text-3xl border-0 p-0"
            ></i>
            <i class="fa-brands fa-facebook text-primary text-3xl border-0 p-0"
            ></i>
            <i class="fa-brands fa-instagram text-primary text-3xl border-0 p-0"
            ></i>
          </span>

          <h3>Identifiant</h3>
          <p class="text-foreground/50">UX Dev Fusion</p>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-[url('images/form-bg-image.svg')] p-4 md:p-6">
      <form
        action=""
        class="bg-primary-300 p-4 md:p-6 flex-grow h-full rounded-lg flex flex-col gap-4"
      >
        <div class="grid md:grid-cols-2 gap-2">
          <div>
            <span class="text-gray-900">Nom</span>
            <Input
              placeholder="Nom"
              className="bg-foreground border-0 focus:border focus:border-primary-500 "
            />
          </div>
          <div>
            <span class="text-gray-900">Prénom</span>
            <Input
              placeholder="Prénom"
              className="bg-foreground border-0 focus:border focus:border-primary-500 "
            />
          </div>
        </div>
        <div>
          <span class="text-gray-900">Numéro de téléphone</span>
          <Input
            placeholder="Numéro de téléphone"
            className="bg-foreground border-0 focus:border border-primary-500 placeholder:text-gray-500 text-gray-500 "
          />
        </div>
        <div>
          <span class="text-gray-900">E-mail</span>
          <Input
            placeholder="E-mail"
            className="bg-foreground border-0 focus:border border-primary-500 placeholder:text-gray-500 text-gray-500 "
          />
        </div>
        <div>
          <span class="text-gray-900">Objet</span>
          <Input
            placeholder="Objet"
            className="bg-foreground border-0 focus:border border-primary-500 placeholder:text-gray-500 text-gray-500 "
          />
        </div>
        <div>
          <span class="text-gray-900">Message</span>
          <Textarea
            placeholder="Message"
            className="bg-foreground border-0 focus:border border-primary-500 placeholder:text-gray-500 text-gray-500 h-24"
          />
        </div>
        <Button className="self-center text-white mt-6">Envoyer</Button>
      </form>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="mt-20">
    <div class="container flex flex-col items-center gap-6">
      <SectionIntroducer text="FAQs" />
      <h2 class="max-w-md text-center">
        Trouvez des réponses à vos inquiétudes
      </h2>
      <Accordion data={faqData} client:idle />
    </div>
  </section>

  <!-- Social Media -->
  <section class="bg-[url('images/section.svg')] bg-cover n-repeat py-10">
    <div class="container grid md:grid-cols-2 gap-10">
      <div>
        <h2>Retrouvez nous sur les reseaux</h2>
        <p>
          Suivez-nous sur les réseaux sociaux pour rester informé sur
          l'actualité de UX Dev Fusion et nos dernières publications !
        </p>
      </div>
      <div class="flex gap-6 items-center justify-center">
		<i class="fa-brands fa-linkedin-in border-white "></i>
		<i class="fa-brands fa-facebook border-white "></i>
		<i class="fa-brands fa-instagram border-white "></i>

	  </div>
    </div>
  </section>

  <!-- CTA -->
  	<section class="mb-40">
	<div class="container">
		<CtaCard></CtaCard>
	</div>
	
	</section>
</Layout>
